<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Department manager by Shamoev</display-name>

    <servlet>
        <servlet-name>departmentsServlet</servlet-name>
        <servlet-class>com.aimprosoft.controller.DepsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>departmentsServlet</servlet-name>
        <url-pattern>/departments</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addModDepServlet</servlet-name>
        <servlet-class>com.aimprosoft.controller.AddModDepServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addModDepServlet</servlet-name>
        <url-pattern>/addmoddep</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>emplsServlet</servlet-name>
        <servlet-class>com.aimprosoft.controller.EmplsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>emplsServlet</servlet-name>
        <url-pattern>/employees</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>addModEmplServlet</servlet-name>
        <servlet-class>com.aimprosoft.controller.AddModEmplServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addModEmplServlet</servlet-name>
        <url-pattern>/addmodempl</url-pattern>
    </servlet-mapping>

</web-app>